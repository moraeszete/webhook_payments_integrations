# =================================
# ENVIRONMENT CONFIGURATION
# =================================

# Server Configuration
NODE_ENV=local
PORT=3000
SERVER_MODE=local

# =================================
# DATABASE CONFIGURATION
# =================================

# MongoDB
MONGO_DATABASE=webhook

# Redis (configured dynamically via getServiceConfigs)
REDIS_HOST=100.64.92.6
REDIS_PORT=6379
REDIS_USERNAME=b3dev
REDIS_PASSWORD=your-redis-password
REDIS_DB_NUMBER=0

# =================================
# QUEUES CONFIGURATION
# =================================

SUPPPLIERS_TOKENS=suppliers_tokens
ASAAS_QUEUE=asaas_queue
STRIPE_QUEUE=stripe_queue
TWILIO_QUEUE=twilio_queue

# =================================
# SECURITY CONFIGURATION
# =================================

SECRET_KEY=your-secret-key-here

# Access Tokens (configured dynamically)
# ASAAS_ACCESS_TOKEN=your-asaas-token-here
# STRIPE_ACCESS_TOKEN=your-stripe-token-here

# =================================
# SSL CERTIFICATES (Production Only)
# =================================

# Certificate files (place in ../../certificates/ folder)
CERTS_KEY=server.key
CERTS_CERTIFICATION=server.crt
CERTS_CABUNDLE=ca-bundle.crt
CERTS_CACERTIFICATESERVICES=ca-services.crt

# =================================
# EXTERNAL SERVICES
# =================================

# Project Server ID for configurations
PROJECT_SERVER_ID=your-project-server-id

# Twilio Configuration (if needed)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=your-twilio-phone

# =================================
# DEVELOPMENT CONFIGURATION
# =================================

# Debug and Logging
DEBUG=false
LOG_LEVEL=info

# Cache TTL (in seconds)
REDIS_TTL=86400
